<head>
    <%- include ('../partials/head.ejs'); %>  <!--Incluindo o head-->
    <title>Remover usuário</title>
  </head>
  
  <body>
      <header>
          <%- include ('../partials/header.ejs'); %>
      </header>
  
      <main>
        <form>
            <div class="form-group row">
              <label for="inputEmail3" class="col-sm-2 col-form-label">Usuário para ser removido:</label>
              <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputPassword3" class="col-sm-2 col-form-label">Senha do ADM</label>
              <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword3" placeholder="Senha">
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">Confirmar:</div>
              <div class="col-sm-10">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="gridCheck1">
                  <label class="form-check-label" for="gridCheck1">
                    Deseja realmente excluir esse usuário?
                  </label>
                </div>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Entrar</button>
              </div>
            </div>
          </form>
      </main>

      <footer>
          <%- include ('../partials/footer.ejs'); %>
      </footer>
  
      <!-- JavaScript Bundle with Popper -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>